<Window x:Class="Kyrsovoi.addHouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kyrsovoi"
        mc:Ignorable="d"
             Height="540" Width="350" Icon="/logo.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" OpacityMask="Black" BorderBrush="#FFD2FCD1" Background="#9AA09C" WindowStyle="None" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!--toolbar-->
        <Grid x:Name="ToolBar" Background="#FFACACAC" Height="40" VerticalAlignment="Top" >
            <TextBlock x:Name="tbtext" Text="Карточка домов" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30 0 0 0"></TextBlock>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Image Name="Min" Height="22" Width="22" Margin="0 10 " MouseDown="Min_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="source/free-icon-minimize-sign-11001780.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=Min}"
             Value="true">
                                    <Setter Property="Source" Value="source/grey.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Name="krest"  Height="13" Width="13" Margin="10" MouseDown="krest_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="source/krest.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=krest}"
                        Value="true">
                                    <Setter Property="Source" Value="source/krest2.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>
            </StackPanel>
        </Grid>
        <!--fields-->
        <Grid Background="#9AA09C" Margin="10 40 10 10">
            <!--<! — Основной контейнер с отступами для формы —>-->
            <Border Background="LightGray" CornerRadius="10" Margin="20,20,20,70">
                <StackPanel Margin="20">
                    <!--<! — Заголовок ФИО —>-->
                    <TextBlock Text="Основная информация" TextDecorations="Underline" FontWeight="Bold" Foreground="DarkGreen" Margin="0,10,0,5"/>
                    <!--<! — Поля для ввода имени и фамилии —>-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Название"  Width="80" VerticalAlignment="Center"/>
                        <TextBox MaxLength="40" x:Name="nameHouse" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsReadOnly="True"  Width="150" Margin="10,0" TextChanged="name_TextChanged" PreviewTextInput="nameHouse_PreviewTextInput"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Тип" Width="80" VerticalAlignment="Center"/>
                        <ComboBox x:Name="type" Text="{Binding Type, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsReadOnly="True"  Width="150" Margin="10,0">
                            <ComboBoxItem Content="tent"/>
                            <ComboBoxItem Content="cabin"/>
                            <ComboBoxItem Content="yurt"/>
                            <ComboBoxItem Content="treehouse"/>
                        </ComboBox>
                    </StackPanel>

                    <!--<! — Заголовок Контактная информация —>-->
                    <TextBlock Text="Характеристики" TextDecorations="Underline" FontWeight="Bold" Foreground="DarkGreen" Margin="0,10,0,5"/>
                    <!--<! — Поля для ввода Email и Телефона —>-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Вместимость" Width="80" VerticalAlignment="Center"/>
                        <TextBox x:Name="capacity" Text="{Binding Capacity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsReadOnly="True"  Width="150" Margin="10,0" PreviewTextInput="capacity_PreviewTextInput"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Цена за ночь" Width="80" VerticalAlignment="Center"/>
                        <TextBox MaxLength="2" x:Name="price" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsReadOnly="True"  Width="150" Margin="10,0" PreviewTextInput="capacity_PreviewTextInput"/>
                    </StackPanel>

                    <!--<!— Заголовок Личная информация —>-->
                    <TextBlock Text="Вид" TextDecorations="Underline" FontWeight="Bold" Foreground="DarkGreen" Margin="0,10,0,5"/>
                    <!--<! — Поля для ввода даты рождения и номера паспорта —>-->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Описание" Width="85" VerticalAlignment="Center"/>
                        <TextBox x:Name="description" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" TextWrapping="Wrap" 
                                AcceptsReturn="True" 
                                VerticalScrollBarVisibility="Visible" 
                                HorizontalScrollBarVisibility="Disabled"
                                MinHeight="50" 
                                 MaxLength="200"
                                MinWidth="100" IsReadOnly="True"  Width="150" Margin="5,0" PreviewTextInput="nameHouse_PreviewTextInput"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                            <TextBlock Text="Фото" Width="80" VerticalAlignment="Center"/>
                            <Image Name="Smena" Source="ImageButton/Smena.png" VerticalAlignment="Center" Margin="0,25" Width="40" Height="40" Stretch="Fill" MouseDown="Image_MouseDown"/>
                        </StackPanel>
                        <Image Name="image"  Source="{Binding Photo}" Width="120" Height="120" Stretch="Fill"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>

            <!--Кнопки управления-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <Button Style="{DynamicResource ButtonStyle1}" x:Name="button" Content="Редактировать" Width="100" Height="30" Margin="10,0" Background="DarkSeaGreen" Click="Button_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}" x:Name="delete" Content="удалить" Width="100" Height="30" Margin="10,0" Background="DarkSeaGreen" Click="delete_Click"/>

            </StackPanel>

            <!--Кнопка Назад-->
            <!--<Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Margin="10,0,0,10"/>-->
        </Grid>
    </Grid>
</Window>
