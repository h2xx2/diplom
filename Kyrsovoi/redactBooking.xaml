<Window x:Class="Kyrsovoi.redactBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kyrsovoi"
        mc:Ignorable="d"
        Height="730" Width="500" Icon="/logo.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" OpacityMask="Black" BorderBrush="#FFD2FCD1" Background="#9AA09C" WindowStyle="None" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="headline">
            <Setter Property="Margin" Value="0 0 0 0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="DarkGreen"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0, 0"/>
        </Style>
        <ControlTemplate x:Key="ButtonTemplate1" TargetType="{x:Type Button}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border CornerRadius="5 0 0 5" Background="#FFACACAC" BorderBrush="Black" BorderThickness="1" Grid.Column="0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                    <TextBlock  Grid.Column="0" HorizontalAlignment="Center" Text="Хижина" VerticalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
                </Border>
                <Border Background="#FFACACAC" BorderBrush="Black" BorderThickness="0 1 0 1" Grid.Column="1" MouseLeftButtonDown="Border_MouseLeftButtonDown_1"/>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center" Text="Тент" VerticalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>
                <Border Background="#FFACACAC" BorderBrush="Black" BorderThickness="1" Grid.Column="2" MouseLeftButtonDown="Border_MouseLeftButtonDown_2"/>
                <TextBlock Grid.Column="2" HorizontalAlignment="Center" Text="Юрта" VerticalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_2"/>
                <Border Background="#FFACACAC" CornerRadius="0 5 5 0" BorderBrush="Black" BorderThickness="0 1 1 1" Grid.Column="3" MouseLeftButtonDown="Border_MouseLeftButtonDown_3"/>
                <TextBlock Grid.Column="3" HorizontalAlignment="Center" Text="Дом на дереве" VerticalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_3"/>
            </Grid>
        </ControlTemplate>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!--toolbar-->
    <Grid>
        <Grid x:Name="ToolBar" Background="#FFACACAC" Height="40" VerticalAlignment="Top" MouseDown="ToolBar_MouseDown" >
            <TextBlock x:Name="tbtext" Text="Карточка брони" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30 0 0 0"></TextBlock>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Image Name="Min" Height="22" Width="22" Margin="0 10 " MouseDown="Min_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="source/free-icon-minimize-sign-11001780.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=Min}"
                     Value="true">
                                    <Setter Property="Source" Value="source/grey.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="0.5"/>
                    </Image.Effect>
                </Image>
                <Image Name="krest"  Height="13" Width="13" Margin="10" MouseDown="krest_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="source/krest.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=krest}"
                                Value="true">
                                    <Setter Property="Source" Value="source/krest2.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>
            </StackPanel>
        </Grid>
        <Grid>
            <Border Background="LightGray" CornerRadius="10" Margin="20,50,20,70">

                <!-- Основное содержимое -->
                <StackPanel Margin="20,20,20,20">
                    <!-- Поля для редактирования записи -->
                    <StackPanel>
                        <TextBlock Style="{StaticResource headline}" Text="Гость" FontWeight="Bold" Margin="0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Номер телефона" Margin="10, 0" FontSize="14"/>
                            <TextBox Name="GuestID" MaxLength="11" Text="{Binding Guest_id, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" Margin="0,0,0,10" LostFocus="GuestID_LostFocus" PreviewTextInput="GuestID_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel x:Name="spFio" Orientation="Horizontal" Visibility="Collapsed">
                            <TextBlock Text="Фамилия/Имя" Margin="10, 0" FontSize="14"/>
                            <TextBox Name="Fio" Width="200" Margin="0,0,0,10" IsReadOnly="true"/>
                        </StackPanel>

                    </StackPanel>
                    
                    <StackPanel Name="SpEmpoy">
                        <TextBlock Text="Сотрудник" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия/Имя" Margin="10, 0" FontSize="14"/>
                            <TextBox Name="EmployeeID" IsReadOnly="True" Text="{Binding Employees_id, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" Margin="0,0,0,10"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Дата заезда" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>

                    <DatePicker Name="CheckInDate" Text="{Binding Check_in_date, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" Margin="0,0,0,10" SelectedDateChanged="CheckInDate_SelectedDateChanged" PreviewTextInput="CheckInDate_PreviewTextInput"/>

                    <TextBlock Text="Дата выезда" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>
                    <DatePicker Name="CheckOutDate" Text="{Binding Check_out_date, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" Margin="0,0,0,10"  SelectedDateChanged="CheckOutDate_SelectedDateChanged" PreviewTextInput="CheckInDate_PreviewTextInput"/>
                    <StackPanel x:Name="spHome" IsEnabled="False">
                        <TextBlock Text="Выбор дома" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Название дома" Margin="10, 0" FontSize="14"/>
                            <TextBox Name="UnitID" Text="{Binding Unit_id, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" IsReadOnly="True" Margin="0,0,0,0" GotFocus="UnitID_GotFocus_1" LostFocus="UnitID_LostFocus">
                            </TextBox>
                            <Button Name="CollabsedHome"  Style="{DynamicResource ButtonStyle1}" Content="Скрыть" Width="70" Height="24" Background="DarkSeaGreen" IsEnabled="False" Margin="20,0" Click="Button_Click_1"/>
                        </StackPanel>
                        <StackPanel>
                            <Button Name="unitButton" Template="{DynamicResource ButtonTemplate1}" Margin="0,10,0,5" Width="350" Height="25"/>

                        </StackPanel>
                        <ListView ItemsSource="{Binding Houses}" Name="listUnit" Margin="0 10 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="0" SelectionChanged="listUnit_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black" BorderThickness="1" Padding="10" CornerRadius="20" Margin="5">
                                        <!-- Используем Grid для управления расположением кнопки и текста -->
                                        <Grid Width="350" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="2*" />
                                                <!-- Колонка для текста -->
                                                <!-- Колонка для кнопки -->
                                            </Grid.ColumnDefinitions>

                                            <!-- Текстовые элементы в первой колонке -->
                                            <TextBlock Text="{Binding name}" Grid.Column="0" FontWeight="Bold" TextWrapping="Wrap" FontSize="14" Margin="10 0 5 0"/>
                                            <TextBlock Text="{Binding capacity}" Grid.Column="1" TextWrapping="Wrap" FontSize="13" Margin="0 0 10 0"/>
                                            <TextBlock Text="{Binding price}" Grid.Column="2" FontStyle="Italic" FontSize="13" Foreground="Gray" Margin="0 0 10 0"/>
                                            <TextBlock Text="{Binding description}" Grid.Column="3" FontStyle="Italic" FontSize="13" MaxWidth="130" TextWrapping="Wrap" Foreground="Gray" Margin="0 0 10 0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    
                    <TextBlock Text="Итоговая цена" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>
                    <TextBox Name="TotalPrice" Text="{Binding Total_price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200" IsReadOnly="True" Margin="0,0,0,10"/>

                    <TextBlock Text="Статус бронирования" Style="{StaticResource headline}" FontWeight="Bold" Margin="0,5"/>
                    <ComboBox x:Name="StatusBooking" Text="{Binding Booking_status, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="200"  Panel.ZIndex="10"
                             Foreground="Black"
                             IsReadOnly="True" SelectionChanged="cb1_SelectionChanged">
                        <ComboBoxItem Content="подтвержденный"/>
                        <ComboBoxItem Content="завершенный"/>
                        <ComboBoxItem Content="забронированный"/>
                        <ComboBoxItem Content="отмененный"/>
                    </ComboBox>
                </StackPanel>
            </Border>
            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <Button Name="button" Style="{DynamicResource ButtonStyle1}" Content="Редактировать" Width="100" Height="30" Margin="10,0" Background="DarkSeaGreen" Click="Button_Click"/>
                <Button Style="{DynamicResource ButtonStyle1}" x:Name="delete" Content="удалить" Width="100" Height="30" Margin="10,0" Background="DarkSeaGreen" Click="delete_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
